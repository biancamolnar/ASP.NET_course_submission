@inject ProductRepository productRepo;

<div class="category-container">
    <h1>New tents</h1>

    <div class="products-container">
        @foreach (var product in await productRepo.GetAllAsync())
        {
            if (product.ProductCategories.Any(x => x.Category.CategoryName == "new"))
            {
                <div class"product-item">
                    <div>
                        <a asp-controller="products" asp-action="details" asp-route-id="@product.ArticleNumber">
                            <img src="/images/tents/@product.ImageUrl" />
                        </a>
                    </div>
                    <div><a asp-controller="products" asp-action="details" asp-route-id="@product.ArticleNumber">@product.Title</a></div>
                    <div id="price">$ @product.Price</div>
                </div>
            }
        }
    </div>
</div>