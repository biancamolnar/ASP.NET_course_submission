@model ContactFormViewModel

<div class="contactform">
    <h2 class="contact-title">Get in Touch</h2>
<form asp-action="Index" asp-controller="Contact" method="post" novalidate>
    <div asp-validation-summary=ModelOnly class="text-danger"></div>

    <div class="contact-info">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" onkeyup="validateText(event)" />
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" onkeyup="validateEmail(event)"  />
        <span asp-validation-for="Email" class="small text-danger"></span>
    </div>
    </div>
    <div class="mb-3">
        <label asp-for="Message" class="form-label">Message</label>
        <textarea asp-for="Message" class="form-control" onkeyup="validateText(event)" rows="7"></textarea>
        <span asp-validation-for="Message" class="small text-danger"></span>
    </div>

    <div class="d-grid mt-5">
        <button type="submit" class="btn-theme">SEND</button>
    </div>
</form>
</div>