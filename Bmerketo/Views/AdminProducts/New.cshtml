@model AdminNewProductViewModel
@{
    ViewData["Title"] = "Product Registration";
}

<div class="register-product-container">
    <h2>Register new product</h2>
    <form method="post" enctype="multipart/form-data" novalidate>
        <div class="register-info mb-3">
            <div class="register-field">
                <label asp-for="ArticleNumber" class="form-label"></label>
                <input asp-for="ArticleNumber" onkeyup="validateRequired(event)" autocomplete="off" class="form-control" />
                <small><span asp-validation-for="ArticleNumber" class="text-danger"></span></small>
            </div>
            <div class="register-field">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" onkeyup="validateRequired(event)" autocomplete="off" class="form-control" />
                <small><span asp-validation-for="Title" class="text-danger"></span></small>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Ingress" class="form-label"></label>
            <textarea asp-for="Ingress" rows="2" onkeyup="validateRequired(event)" autocomplete="off" class="form-control"></textarea>
            <small><span asp-validation-for="Ingress" class="text-danger"></span></small>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="5" onkeyup="validateRequired(event)" autocomplete="off" class="form-control"></textarea>
            <small><span asp-validation-for="Description" class="text-danger"></span></small>
        </div>
        <div class="register-info mb-3">
            <div class="register-field">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" value="0" onkeyup="validateRequired(event)" autocomplete="off" class="form-control" />
                <small><span asp-validation-for="Price" class="text-danger"></span></small>
            </div>
            <div class="register-field">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="image-upload" />
                <small><span asp-validation-for="Image" class="text-danger"></span></small>
            </div>
        </div>

        <div class="mb-3">
            @foreach (SelectListItem category in ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" name="Categories" id="category-@category.Text-@category.Value" value="@category.Value" checked="@category.Selected" class="form-check-input" />
                    <label for="category-@category.Text-@category.Value" class="form-check-label">@category.Text</label>
                </div>
            }
        </div>

        <div class="d-grid mt-5">
            <button class="btn-theme">Create product</button>
        </div>
    </form>
</div>
